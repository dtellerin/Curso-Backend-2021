<h1 style="color:blue;">Vista de Productos</h1>
<br>

<% const hayProductos = productos.length > 0; %>
<% if(hayProductos){ %>
<div class="table-responsive">
    <table class="table table-dark">
        <tr style="color: yellow;">
            <th>Nombre</th>
            <th>Precio</th>
            <th>Foto URL</th>
        </tr>
        <% for (const producto of productos) {%>
        <tr>
            <td><%=producto.title%></td>
            <td><%=producto.price%></td>
            <td><img src="<%=producto.thumbail%>"></td>
        </tr>
        <%};%>
    </table>
</div>
<% } else{ %>
<h3 class="alert alert-danger">No se encontraron productos</h1>
    <% } %>
<a href="http://localhost:8080/" class="btn btn-info mt-3 mb-5" role="button">Volver</a>