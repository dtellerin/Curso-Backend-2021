  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css' integrity='sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l' crossorigin='anonymous')

.container.mt-3

  .jumbotron
    h1(style='color:blue;') Ingrese Productos
    br
 
    form(action='/productos' method='post')
      .form-group
        label(for='title')
          b Nombre
        input#title.form-control(type='text' name='title')
      .form-group
        label(for='price')
          b Precio
        input#price.form-control(type='number' name='price')
      .form-group
        label(for='thumbail')
          b Foto URL

        input#thumbail.form-control(type='text' name='thumbail')

      button.btn.btn-success.mt-3.mb-5 Enviar

      a.btn.btn-info.mt-3.mb-5(href='http://localhost:8080/productos' role='button') Ver Productos
